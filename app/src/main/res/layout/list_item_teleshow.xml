<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_poster"
        android:layout_width="@dimen/list_item_poster_size"
        android:layout_height="@dimen/list_item_poster_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/list_item_poster_padding"
        android:contentDescription="@string/list_item_poster_content_description" />

    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_title_margin_start"
        android:layout_marginTop="@dimen/list_item_title_margin_top"
        android:layout_toEndOf="@+id/list_item_poster"
        android:textSize="@dimen/list_item_title_size" />

    <TextView
        android:id="@+id/list_item_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_item_title"
        android:layout_below="@+id/list_item_title"
        android:textSize="@dimen/list_item_vote_average_size" />
</RelativeLayout>